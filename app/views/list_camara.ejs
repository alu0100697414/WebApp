<% include _head.ejs %>
<body ng-controller="ListCamarasCtrl">
<% include _navbar.ejs %>

<main><div class="container">
    <div class="row">
        <br><br>
        <h2 class="center indigo-text"> Cámaras registradas </h2>
        <h6 class="center indigo-text"> (Cámaras que han hecho uso del sistema con su última conexión) </h6>
        <br>
    </div>
    <div class="row">
        <div class="col m12 s12">
            <table class="responsive-table bordered">
                <thead>
                <tr>
                    <th data-field="live"></th>
                    <th data-field="mac">Dirección MAC</th>
                    <th data-field="server">Enlace del vídeo</th>
                    <th data-field="date">Última conexión</th>
                    <th data-field="delete">Eliminar</th>
                </tr>
                </thead>
                <tbody>
                <tr ng-repeat="camara in camaras">
                    <td>
                        <span id="badge_table" ng-if="camara.online" class="badge_custom live hoverable"></span>
                    </td>
                    <td>{{camara.name}}</td>
                    <td>{{camara.server}}</td>
                    <td>{{camara.time_offline}}</td>
                    <td>
                        <a ng-click="delete(camara._id)" class="btn btn-floating waves-effect waves-light red hoverable">
                          <i  class="material-icons">delete</i>
                        </a>

                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>

</div></main>
<% include _footer.ejs %>
</body>
</html>
