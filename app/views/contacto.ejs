<% include _head.ejs %>
<body ng-controller="ContactCtrl">
<% include _navbar.ejs %>

<main><div class="container">
  <div class="row">
    <br><br>
    <h2 class="center indigo-text"> Contacto </h2>
  </div>

  <div class="row">
    <form action="/contactemail" id="contact-form" class="col s12" method="post" role="form">
      <div class="row">
        <div class="input-field col s4">
          <input id="name" name="name" type="text" class="validate" required>
          <label for="name">Nombre</label>
        </div>
        <div class="input-field col s8">
          <input id="surname" name="surname" type="text" class="validate" required>
          <label for="surname">Apellidos</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <input id="email" name="email" type="email" class="validate" required>
          <label for="email" data-error="Inválido" data-success="Válido">Email</label>
        </div>
        <div class="input-field col s6">
          <input id="subject" name="subject" type="text" class="validate" required>
          <label for="subject">Asunto</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <textarea id="textemail" name="textemail" class="materialize-textarea" required></textarea>
          <label for="textemail">Indique su comentario</label>
        </div>
      </div>
      <div class="row center-align">
        <button class="btn waves-effect waves-light" type="submit" name="action">Enviar
          <i class="material-icons right">send</i>
        </button>
      </div>
    </form>
  </div>
        
  
  </div></main>

  <% include _footer.ejs %>

  </body>
</html>
